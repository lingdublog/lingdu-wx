<?xml version='1.0' encoding='utf-8'?>
<widget id="cc.lingdublog.wx" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>零度精选</name>
    <description>零度微信精选</description>
    <author email="jiuri2000@126.com" href="http://www.lingdublog.cc">零度逍遥</author>
    <content src="index/index.html" />
    <access origin="*" />
    <platform name="android">
        <preference name="Orientation" value="portrait" /> <!-- app锁定竖屏 -->
        <preference name="WebViewBounce" value="false" />    <!-- 以下三个 阻止回弹效果 -->
        <preference name="DisallowOverscroll" value="true" />
        <preference name="UIWebViewBounce" value="false" />
        <preference name="SplashScreen" value="screen" /> <!-- 启动画面，对应res中的screen文件 -->
        <preference name="SplashScreenDelay" value="10000" /> <!-- 启动画面时间 默认10秒，不自动关闭-->
        <preference name="AutoHideSplashScreen" value="false"/> <!-- 在web界面加载完成后会手动关闭-->
        <preference name="ShowSplashScreenSpinner" value="false" /> <!-- 隐藏加载灰圈 -->
        <preference name="SplashShowOnlyFirstTime" value="false" /> <!-- 每次重新启动都显示 -->
        <preference name="AndroidPersistentFileLocation" value="Compatibility" /> <!-- media插件需要，文件路径的兼容 -->
        <!--code-push temp-key-->
